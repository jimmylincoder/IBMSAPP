<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.suntek.ibmsapp">

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="false"
        android:resizeable="true"
        android:smallScreens="true" />


    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

    <application
        android:name=".app.IBMSApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_building"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".page.login.UserLoginActivity"
            android:theme="@style/MainViewTheme"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".page.main.MainActivity"
                  android:theme="@style/MainViewTheme"
                  android:screenOrientation="portrait"
                  android:launchMode="singleTask"/>

        <activity
            android:name=".page.camera.CameraPlayActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden|screenSize"/>
        <activity
            android:name=".page.camera.CameraChooseActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".page.camera.CameraSearchActivity"
                  android:screenOrientation="portrait"/>

        <activity android:name=".page.about.AboutActivity"
                  android:screenOrientation="portrait"/>

        <activity android:name=".page.camera.CameraInfoActivity"
                  android:screenOrientation="portrait"/>

        <activity android:name=".page.camera.CameraDownloadActivity"
                  android:screenOrientation="portrait"/>

        <activity android:name=".page.camera.CameraDateActivity"
                  android:screenOrientation="portrait"/>

        <activity android:name=".page.photo.PhotoDetailActivity"
                  android:screenOrientation="portrait"/>

    </application>

</manifest>